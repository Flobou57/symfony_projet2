{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
    <section class="form-page">
        <div class="form-hero">
            <div>
                <div class="form-kicker">Clients</div>
                <h1 class="form-title h3 mb-2">Nouveau client</h1>
                <p class="form-subtitle">Creez une fiche client complete pour le suivi.</p>
            </div>
            <div class="form-meta">
                <div class="fw-semibold">Profil client</div>
                <div class="small text-white-50">Renseignez les coordonnees essentielles.</div>
            </div>
        </div>
        <div class="form-grid">
            <div class="form-main">
                {% include 'client/_form.html.twig' with {form: form, button_label: 'Creer'} %}
            </div>
            <aside class="form-side card">
                <div class="card-body">
                    <div class="form-side-title">Bonnes pratiques</div>
                    <div class="form-tip">
                        <div class="form-tip-title">Email</div>
                        <div class="small text-white-50">Utilisez l'adresse principale du contact.</div>
                    </div>
                    <div class="form-tip">
                        <div class="form-tip-title">Telephone</div>
                        <div class="small text-white-50">Ajoutez l'indicatif si besoin.</div>
                    </div>
                    <div class="form-tip">
                        <div class="form-tip-title">Adresse</div>
                        <div class="small text-white-50">Precisez ville et code postal.</div>
                    </div>
                </div>
            </aside>
        </div>
    </section>
{% endblock %}
