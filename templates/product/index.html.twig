{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">Produits</h1>
            <div class="text-muted">Tri par prix decroissant</div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="{{ path('product_export') }}">Exporter CSV</a>
            {% if can_manage %}
                <a class="btn btn-primary" href="{{ path('product_new') }}">Ajouter</a>
            {% endif %}
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th class="text-end">Prix</th>
                        {% if can_manage %}
                            <th class="text-end">Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td class="text-muted">{{ product.description }}</td>
                            <td class="text-end">{{ product.price }}</td>
                            {% if can_manage %}
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" href="{{ path('product_edit', {id: product.id}) }}">
                                        Modifier
                                    </a>
                                    <form method="post" action="{{ path('product_delete', {id: product.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                                    </form>
                                </td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="{{ can_manage ? 4 : 3 }}" class="text-center text-muted py-4">Aucun produit.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
